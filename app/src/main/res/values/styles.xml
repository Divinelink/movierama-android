    <style name="TextAppearance.MyApp.DisplaySmall" parent="TextAppearance.Material3.DisplaySmall">
        <item name="android:fontFamily">@font/font_medium</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">64sp</item>
        <item name="android:letterSpacing">0</item>
    </style>


    <style name="RecipeItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:drawablePadding">12dp</item>
    </style>

    <style name="SavedRecipeImageViewStyle">
        <item name="android:layout_margin">4dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="customSnackBarStyle">
        <item name="android:backgroundTint">@color/colorPrimaryContainer</item>

    </style>

    <style name="AppTheme.Toolbar" parent="@style/Widget.Material3.Toolbar">
        <item name="titleTextAppearance">@style/Text.TitleMedium</item>
        <item name="subtitleTextAppearance">@style/Text.BodyMedium</item>
    </style>

    <style name="DayNight.Popup.OverflowMenu" parent="@style/Widget.Material3.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:popupElevation">4dp</item>
        <item name="android:dropDownHorizontalOffset">-14dp</item>
        <item name="android:dropDownVerticalOffset">1px</item>
        <item name="android:popupBackground">@drawable/rounded_rectangle_surface_2_18</item>
    </style>

    <style name="ActionBar.Style" parent="Widget.Material3.ActionBar.Solid">
        <item name="actionOverflowMenuStyle">@style/DayNight.Popup.OverflowMenu</item>
        <item name="background">@color/colorBackground</item>
        <item name="android:itemTextAppearance">@style/Text.BodyLarge</item>
    </style>


    <style name="BottomNavigationStyle" parent="Widget.Material3.BottomNavigationView">
        <item name="android:layout_height">wrap_content</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="itemPaddingBottom">16dp</item>
        <item name="itemPaddingTop">16dp</item>
        <item name="itemRippleColor">@color/transparent</item>
        <item name="itemTextAppearanceActive">@style/Text.LabelSmall</item>
        <item name="itemTextAppearanceInactive">@style/Text.LabelSmall</item>
        <item name="android:gravity">center</item>
    </style>


    <style name="Widget.Button.Base.Primary" parent="Widget.Material3.Button">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="Widget.CompoundButton.RadioButton" parent="Widget.Material3.CompoundButton.RadioButton">
        <item name="android:minWidth">0dp</item>
        <item name="buttonTint">@color/selection_control_button_tint</item>
    </style>

    <style name="Widget.Button.Large.Primary" parent="@style/Widget.Button.Base.Primary">
        <item name="android:minHeight">44dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Button.Primary</item>
    </style>

    <style name="Widget.Button.Base.Secondary" parent="Widget.Material3.Button.TextButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/button_secondary_text_selector</item>
        <item name="iconGravity">textEnd</item>
        <item name="iconTint">@color/button_secondary_text_selector</item>
        <item name="rippleColor">@color/button_secondary_ripple</item>
    </style>

    <style name="Widget.Button.Large.Secondary" parent="@style/Widget.Button.Base.Secondary">
        <item name="android:minHeight">@dimen/m3_large_button_height</item>
        <item name="strokeWidth">0dp</item>
    </style>

    <style name="ThemeOverlay.Button.Primary" parent="ThemeOverlay.Material3.Button">
        <item name="colorOnContainer">@color/colorOnPrimary</item>
        <item name="colorContainer">@color/colorPrimary</item>
    </style>

    <style name="ThemeOverlay.Button.Tonal" parent="ThemeOverlay.Material3.Button">
        <item name="colorOnContainer">@color/colorOnPrimaryContainer</item>
        <item name="colorContainer">@color/colorPrimaryContainer</item>
    </style>

    <style name="Widget.Button.Base.Tonal" parent="Widget.Material3.Button.TonalButton">
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.Button.Tonal</item>
    </style>

    <style name="Widget.Button.Large.Tonal" parent="Widget.Button.Base.Tonal">
        <item name="android:minHeight">44dp</item>
    </style>

</resources>
